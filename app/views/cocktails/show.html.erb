<div class="contain">
  <h1>
    <%= @cocktail.name  %>
  </h1>
</div>

<% @cocktail.doses.each do |dose|%>
  <%= dose.description %>
  <li>
    <%= Ingredient.find(dose.ingredient_id).name %>
  </li>
  <%= link_to "Delete this dose", dose_path(dose), method: :delete  %>
  <% end %>


<%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail) %>
